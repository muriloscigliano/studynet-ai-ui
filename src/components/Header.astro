---
// Header component with login link and theme toggle
import { Menu } from "lucide-react";

interface Props {
  loginText?: string;
}

const { loginText = "Login" } = Astro.props;
---
<div class="header-row">
  <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle menu">
    <Menu width={20} height={20} strokeWidth={2} />
  </button>
  
  <div class="header-actions">
    <a href="/login" class="login-trigger">{loginText}</a>
    <div class="theme-toggle-wrapper">
    <button class="theme-toggle-btn" data-theme="dark" aria-label="Dark mode">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </button>
    <button class="theme-toggle-btn active" data-theme="light" aria-label="Light mode">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
    </button>
  </div>
  </div>
</div>

