---
// Header component with login link and theme toggle
interface Props {
  loginText?: string;
}

const { loginText = "Login / Sign Up" } = Astro.props;
---
<div class="header-row">
  <a href="/login" class="login-trigger">{loginText}</a>
  <button class="header-icon" id="themeToggle" aria-label="Toggle theme"></button>
</div>

